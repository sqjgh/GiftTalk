<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dllo.gifttalk">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".tools.MyApp"
        android:theme="@style/HomeTitle">
        <activity android:name=".main.MainActivity"
            android:theme="@style/HomeTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".secondlevel.secondhome.WebViewActivity">

        </activity>
        <activity android:name=".secondlevel.secondgift.SecondGiftActivity">
        </activity>

        <activity android:name=".base.TempAty"/>
        <activity android:name=".secondlevel.secondhome.SearchSecondActivity"/>
        <activity android:name=".secondlevel.secondprofile.LoginActivity"/>
        <activity android:name=".secondlevel.secondprofile.SettingActivity"/>
        <activity android:name=".secondlevel.secondhome.SearchThirdActivity"/>
        <activity android:name=".profile.FollowActivity"/>
    </application>

</manifest>