<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dllo.gifttalk.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/linearLayout_main"
        android:orientation="vertical">
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/btns_main"
        android:orientation="horizontal">
     <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
         android:padding="5dp"
         android:layout_weight="1"
         android:text="首页"
         android:gravity="center"
        android:id="@+id/home_main"
         android:button="@null"
         android:drawableTop="@drawable/tabs_home"/>

     <RadioButton
        android:layout_width="0dp"
         android:layout_weight="1"
         android:text="榜单"
         android:layout_height="wrap_content"
        android:id="@+id/gift_main"
         android:button="@null"
         android:gravity="center"
         android:drawableTop="@drawable/tabs_gift"/>

     <RadioButton
        android:layout_width="0dp"
         android:layout_weight="1"
         android:text="分类"
         android:layout_height="wrap_content"
        android:id="@+id/category_main"
         android:button="@null"
         android:gravity="center"
         android:drawableTop="@drawable/tabs_category"/>

     <RadioButton
        android:layout_width="0dp"
         android:layout_weight="1"
         android:text="我的"
         android:layout_height="wrap_content"
        android:id="@+id/profile_main"
         android:button="@null"
         android:gravity="center"
         android:drawableTop="@drawable/tabs_profile"/>

    </RadioGroup>

</LinearLayout>
