<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="#e6fae9"
        android:id="@+id/re1_raiders">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/pic1_head_raiders_category"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门活动"
            android:id="@+id/title1_head_raiders_category"
            android:layout_toRightOf="@id/pic1_head_raiders_category"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小礼君"
            android:id="@+id/from1_head_raiders_category"
            android:layout_toRightOf="@id/pic1_head_raiders_category"
            android:layout_below="@id/title1_head_raiders_category"/>
    </RelativeLayout>
</LinearLayout>