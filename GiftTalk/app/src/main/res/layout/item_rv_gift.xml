<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:id="@+id/rl_gift">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageview_item_gift"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="1dp"
            android:adjustViewBounds="false"
            android:background="@color/colorBackground"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llone_item_everyday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_item_everyday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_ll_item_everyday"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/top_item_everyday_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="TOP"
                        android:textColor="@color/colorTabLayout"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/num_item_everyday_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="1"
                        android:textColor="@color/colorTabLayout"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/title_item_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"

                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/ll_item_everyday"
                    android:text="让桌面四季如春" />
            </LinearLayout>

            <TextView
                android:id="@+id/title2_item_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/llone_item_everyday"
                android:text="NOMO.格赫思比例花房"
                android:textColor="#B9AAAA" />

            <TextView
                android:id="@+id/price_item_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="bottom"
                android:text="126.5"
                android:textColor="#ff3851" />
            <TextView
                android:id="@+id/over_second_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已下架"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/up_background_item_gift"
        android:layout_marginBottom="4dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/up_up_background"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="9dp"
        android:layout_alignBottom="@+id/linearLayout">
    </RelativeLayout>
</RelativeLayout>